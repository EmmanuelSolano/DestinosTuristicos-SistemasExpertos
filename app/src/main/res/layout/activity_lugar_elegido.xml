<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical"
    tools:context=".LugarElegido">

    <Button
        android:id="@+id/btn_back"
        android:layout_width="73dp"
        android:layout_height="wrap_content"
        android:text="AtrÃ¡s" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvNombreLugar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="30dp"
                android:text=""
                android:textSize="23dp" />

            <TextView
                android:id="@+id/tvPrecioTiquete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="30dp"
                android:text=""
                android:textSize="23dp" />

            <TextView
                android:id="@+id/tvTipoActividad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="30dp"
                android:text=""
                android:textSize="23dp" />

            <TextView
                android:id="@+id/tvTiempoViaje"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="30dp"
                android:text=""
                android:textSize="23dp" />

            <TextView
                android:id="@+id/tvTipoCamino"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="30dp"
                android:text=""
                android:textSize="23dp" />

            <TextView
                android:id="@+id/tvEstiloLugar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="30dp"
                android:text=""
                android:textSize="23dp" />

            <ImageView
                android:id="@+id/ivImagenLugar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="30dp"
                android:textSize="23dp" />

            <TextView
                android:id="@+id/ubicacionLugar"
                android:layout_width="350px"
                android:layout_height="350px"
                android:paddingBottom="30dp"
                app:srcCompat="@mipmap/ic_launcher_ubicacion" />

            <view
                android:id="@+id/youtubePlayer"
                class="com.google.android.youtube.player.YouTubePlayerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btn_playVideo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:text="Reproducir" />

        </LinearLayout>

    </ScrollView>


</LinearLayout>