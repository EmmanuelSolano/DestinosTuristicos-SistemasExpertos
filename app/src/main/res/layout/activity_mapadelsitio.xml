<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Mapadelsitio">

    <Button
        android:id="@+id/btn_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="12dp"
        android:text="Inicio"
        tools:layout_editor_absoluteX="120dp"
        tools:layout_editor_absoluteY="0dp" />

    <Button
        android:id="@+id/btn_characterist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/btn_main"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-8dp"
        android:layout_marginTop="93dp"
        android:text="Características destinos"
        tools:layout_editor_absoluteX="57dp"
        tools:layout_editor_absoluteY="135dp" />

    <Button
        android:id="@+id/btn_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="176dp"
        android:layout_marginLeft="176dp"
        android:layout_marginBottom="302dp"
        android:text="Resultados de búsqueda"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="384dp" />

    <Button
        android:id="@+id/btn_about"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btn_main"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="110dp"
        android:layout_marginRight="110dp"
        android:layout_marginBottom="4dp"
        android:text="Acerca de"
        tools:layout_editor_absoluteX="141dp"
        tools:layout_editor_absoluteY="72dp" />

    <Button
        android:id="@+id/btn_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="157dp"
        android:layout_marginEnd="219dp"
        android:text="Popup duración"
        tools:layout_editor_absoluteX="192dp"
        tools:layout_editor_absoluteY="300dp" />

    <Button
        android:id="@+id/btn_road"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/btn_style"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="165dp"
        android:text="Popup estilo" />


    <Button
        android:id="@+id/btn_cost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/btn_search"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-135dp"
        android:layout_marginBottom="94dp"
        android:text="Popup precio" />


    <Button
        android:id="@+id/btn_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="240dp"
        android:layout_marginRight="240dp"
        android:layout_marginBottom="237dp"
        android:text="Popup Estilo"
        tools:layout_editor_absoluteX="32dp"
        tools:layout_editor_absoluteY="300dp" />




</RelativeLayout>